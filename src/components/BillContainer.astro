---
import "../styles/global.css";
import Bill from "./Bill.astro";
import BillData from "../data/openBills.json";
---

<div
  class="m-5 top-0 left-0 right-0 rounded-lg flex flex-row bg-slate-100 shadow-2xl"
>
  <div class="m-3 p-3 top-0 left-0 right-0 grow text-center text-xl">
    <div class="pb-3">Open Bills</div>
    <div class="divide-y-2">
      {
      BillData.map(({ isOpen, due, total, person, }) => (
      <Bill due = {due}, total = {total}, person = {person}/>
      ))
      }
    </div>
  </div>
  <div class="flex flex-col">
    <button
      class="m-3 center rounded-lg p-3 text-lg text-slate-800 bg-indigo-300"
    >
      <a href=""> Create + </a>
    </button>
    <div class="grow"></div>
  </div>
</div>
